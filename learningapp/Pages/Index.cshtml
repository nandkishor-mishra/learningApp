@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-ykfM8fe5OjWJ58hCEsVrY7uRShVy0DD/Oh4gT1BN5GfWro6ehTpNkc8ARYh7XMGSuZSBkd9cuzB65KRoIFA6Lg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Optional: Add custom styles here */
        .card:hover {
            transform: scale(1.05);
            transition: all 0.3s ease-in-out;
        }
        .rating-container .fa-star {
            font-size: 1.2rem;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">ðŸŽ“ List of Courses</h1>

        <!-- Grid layout for cards -->
        <div class="row g-4">
            @foreach (Course course in @Model.Courses)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-lg border-0 h-100">

                        <!-- Card Header -->
                        <div class="card-header bg-primary text-white text-center">
                            <strong>Course ID:</strong> @course.CourseID
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">

                            <!-- Course Name -->
                            <h5 class="card-title text-center">@course.CourseName</h5>

                            <!-- Course Rating with Stars -->
                            <p class="rating-container text-center my-3">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Floor(course.Rating))
                                    {
                                        <i class="fa-solid fa-star text-warning"></i>
                                    }
                                    else if (i - course.Rating > 0 && i - course.Rating < 1)
                                    {
                                        <i class="fa-solid fa-star-half-alt text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-star text-muted"></i>
                                    }
                                }
                            </p>

                            <!-- Description Placeholder -->
                            <p class="text-muted text-center">
                                This course has a rating of <strong>@course.Rating</strong> stars!
                            </p>

                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer text-center">
                            <a href="#" class="btn btn-outline-primary btn-sm">Learn More</a>
                        </div>
                    </div>
                </div>
            }
        </div> <!-- End of row -->
    </div>

</body>
</html>
